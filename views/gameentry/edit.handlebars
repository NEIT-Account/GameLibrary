<div class="jumbotron text-center">
    <h1>Edit Games</h1>
    <div class="card card-body">
        <form action="/game/gameedit/{{game.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">title</label>
                <input type="hidden" name="_method" method="PUT">
                <input type="text" name="title" class="form-control" value="{{game.title}}" required>
            </div>
            <div class="form-group">
                <label for="price">price</label>
                <input type="text" name="price" class="form-control" value="{{game.price}}" required>
            </div>
            <div class="form-group">
                <label for="description">description</label>
                <textarea name="description" class="form-control" value="{{game.description}}" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">submit</button>
        </form>
    </div>
</div>